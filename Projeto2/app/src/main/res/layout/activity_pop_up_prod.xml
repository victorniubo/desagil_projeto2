<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PopUpProd">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/PUcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/PUlinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/PUmod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/PUtipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/PUcod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/PUdesc"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------------------------------------------------------------------------------------------------------------"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PreÃ§os por tabela (A, B e C):"
        android:textSize="20dp"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/precoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/precoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/precoC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            />
        <NumberPicker
            android:id="@+id/np2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:scrollbarSize="15dp"
            />
        <NumberPicker
            android:id="@+id/np3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/addcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77E17B"
        android:text="Adicionar ao Carrinho" />

</LinearLayout>
